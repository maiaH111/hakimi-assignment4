<div class="row">
    <div class="col-md-12">
          <h2>Posts</h2>
          <hr />

          <table class="table table-responsive">
            <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
            </tr>
            
            {{#each posts}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                <td>{{this.published}}</td>
            </tr>
            {{/each}}
          </table>

    </div>

    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>

</div>
